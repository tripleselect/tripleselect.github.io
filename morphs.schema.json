{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Script list",
  "description": "The list of scripts used in the UTG",
  "type": "object",
  "patternProperties": {
    ".+": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "title": "Module ID",
          "description": "The ID of the module. The module will be called like this: require(id)[func](plr.Name)",
          "required": true
        },
        "func": {
          "type": "string",
          "title": "Function name",
          "description": "The func in require(id)[func](plr.Name).",
          "required": false
        }
      }
    }
  }
}
